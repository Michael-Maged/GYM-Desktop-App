            <TextField fx:id="weightField" alignment="CENTER" layoutX="88.0" layoutY="452.0" prefHeight="27.0" prefWidth="56.0" promptText="Weight" style="-fx-background-color: #FAFAFAFA; -fx-border-color: transparent; -fx-background-radius: 10;" />
            <Label fx:id="errorLabel" layoutX="77.0" layoutY="331.0" textFill="RED" />
