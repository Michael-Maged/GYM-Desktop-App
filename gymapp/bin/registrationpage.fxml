            </ImageView>
            <Label layoutX="97.0" layoutY="156.0" text="REGISTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="registerButton" layoutX="81.0" layoutY="506.0" mnemonicParsing="false" onAction="#handleRegister" prefHeight="40.0" prefWidth="141.0" style="-fx-background-color: #000000;" text="Create Account" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
